<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    tools:context=".ForNote.Note">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFA407"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/popup"
        app:title="@string/List" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFA407"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list" />

    <FrameLayout
        android:id="@+id/frame_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_list2"
        app:layout_constraintEnd_toEndOf="@id/toolbar_list2"
        app:layout_constraintStart_toStartOf="@id/toolbar_list2"
        app:layout_constraintTop_toBottomOf="@id/toolbar_list">


    </FrameLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/shapeofsearch"
        android:theme="@style/MySearchViewStyle"
        app:defaultQueryHint="@string/Searching"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_list2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_list2"
        app:layout_constraintStart_toStartOf="@+id/toolbar_list2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list"
        app:searchHintIcon="@null">

    </androidx.appcompat.widget.SearchView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#FFA407"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lightgrey"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list2" />

</androidx.constraintlayout.widget.ConstraintLayout>